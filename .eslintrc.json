{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["google"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "comma-dangle": "off",
    "object-curly-spacing": "off",
    "space-before-function-paren": "off",
    "max-len": [
      "error",
      {
        "code": 125
      }
    ],
    "indent": ["error", 2],
    "new-cap": "off"
  }
}
